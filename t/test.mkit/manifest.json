{
  "renderer": "TestRenderer",
  "header": [
    { "Subject": "Hello [% friend.name %]"     },
    { "From":    "Test Sender <test@test.com>" },
    { "X-Test":  "This is a [% unrendered %] test.", ":renderer": null  }
  ],
  "alternatives": [
    {
      "type": "text/plain",
      "body": "We don't support tests."
    },
    {
      "header": [
        { "Content-Type": "text/html; charset=utf-8" }
      ],
      "body": "<p>This is the [% crappier %] alternative HTML part.</p>",
      "renderer": null
    },
    {
      "type": [ "text/html", { "charset": "utf-8" } ],
      "path": "better-alternative.html",
      "attachments": [
        {
          "type": "image/jpeg",
          "path": "logo.jpg"
        }
      ]
    }
  ],
  "attachments": [
    {
      "type": "application/pdf",
      "header": [
        { "Content-Disposition": [ "attachment", {"filename": "report.pdf"} ] }
      ],
      "path": "bogus-report.pdf"
    }
  ]
}
